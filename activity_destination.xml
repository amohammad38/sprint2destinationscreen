<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FF7518"
    android:gravity="center">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="40sp"
        android:fontFamily="@font/halloween_spookies"
        android:gravity="center"
        android:textStyle="bold" />

    <!-- Button Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:fontFamily="@font/halloween_spookies"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_log_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/halloween_spookies"
            android:text="Log Travel"
            android:backgroundTint="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_calculate_vacation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/halloween_spookies"
            android:text="Calculate Vacation Time"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@android:color/darker_gray" />
    </LinearLayout>

    <!-- ListView for Travel Logs -->
    <ListView
        android:id="@+id/list_travel_logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/halloween_spookies"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginTop="16dp" />

</LinearLayout>